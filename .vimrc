execute pathogen#infect()

inoremap jk <ESC>
set nocompatible
set showcmd

filetype plugin indent on
syntax on
set encoding=utf-8
set tabstop=4
set shiftwidth=4
set softtabstop=4

set smarttab
set expandtab
set nowrap
set backspace=indent,eol,start

set hlsearch
set incsearch
set ignorecase
set smartcase

set number

nmap <C-j> ddkP
nmap <C-k> ddp

